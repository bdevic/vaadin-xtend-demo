<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- log by method is not fast. remove it later -->
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36}/%method %msg%n
			</pattern>
		</encoder>
	</appender>

    <root level="DEBUG">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>